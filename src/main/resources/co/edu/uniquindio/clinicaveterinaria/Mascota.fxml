<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.clinicaveterinaria.ViewController.MenuMascotaViewController"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #fff9c4, #ffffff);" prefWidth="400" prefHeight="350">

    <children>
        <Label text="🐶 Gestión de Mascotas" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
            <font><Font size="20"/></font>
        </Label>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <children>
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Edad:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEdad" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Raza:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtRaza" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="Sexo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbSexo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button fx:id="Button_Guardar" text="Guardar" prefWidth="100" 
        onAction="#OnClick_Guardar"
        style="-fx-background-color: #ffb74d; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button fx:id="Button_AtrasMenuInicio" text="Atrás" prefWidth="100" onAction="#OnClick_AtrasMenuInicio"
                        style="-fx-background-color: #fb8c00; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </children>
</VBox>
